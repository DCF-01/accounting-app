@model CurrencyGet

<div class="container-fluid" style="padding-top: 10vh">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create @ViewBag.ControllerName</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Currency" asp-action="Manage" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="@Model.CurrencyId" name="CurrencyId"/>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name">
                        </div>
                        <div class="form-group">
                            <label>Value</label>
                            <input type="number" step="any" class="form-control" name="Value" value="@Model.Value">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>