<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="/static/css/main.min.css"/>



</head>
<body class="hold-transition light-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
<div class="wrapper">

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-controller="@ViewBag.ControllerName" asp-action="Index">@ViewBag.ControllerName</a>
        </li>
        @if (ViewBag.ActionName != "Index")
        {
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link" asp-controller="@ViewBag.ControllerName" asp-action="@ViewBag.ActionName">@ViewBag.ActionName</a>
            </li>
        }

    </ul>
</nav>
<!-- /.navbar -->
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
<!-- Brand Logo -->
<a href="index3.html" class="brand-link">
    <img src="~-lib/dist/img/testCompanyLogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">AdminLTE 3</span>
</a>

<!-- Sidebar -->
<div class="sidebar">
<!-- Sidebar user panel (optional) -->
<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
        <img src="~-lib/dist/img/testCompanyLogo.png" class="img-circle elevation-2" alt="User Image">
    </div>
    <div class="info">
        <a href="#" class="d-block"></a>
    </div>
</div>

<!-- SidebarSearch Form -->
<div class="form-inline">
    <div class="input-group" data-widget="sidebar-search">
        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
        <div class="input-group-append">
            <button class="btn btn-sidebar">
                <i class="fas fa-fw fa-search"></i>
            </button>
        </div>
    </div>
    <div class="sidebar-search-results">
        <div class="list-group">

        </div>
    </div>
</div>

<!-- Sidebar Menu -->
<nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar nav-child-indent flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
        with font-awesome or any other icon font library -->
        <li class="nav-item">
            <a href="#" class="nav-link">
                <i class="nav-icon fas fa-boxes"></i>
                <p>
                    User Management
                    <i class="right fas fa-angle-left"></i>
                </p>
            </a>
        </li>
        @if (User.HasClaim(x => x.Value == "Debug"))
        {
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="nav-icon fas fa-user-shield"></i>
                    <p>
                        Manage Master Companies - DEBUG
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a asp-controller="MasterCompany" asp-action="Index" class="nav-link">
                            <i class="fas fa-user-shield nav-icon"></i>
                            <p data-controller="MasterCompany">Master Companies</p>
                        </a>
                    </li>
                </ul>
            </li>
        }
        <li class="nav-item">
            <a href="#" class="nav-link">
                <i class="nav-icon fas fa-boxes"></i>
                <p>
                    Product Management
                    <i class="right fas fa-angle-left"></i>
                </p>
            </a>
            <ul class="nav nav-treeview">
                <li class="nav-item">
                    <a asp-controller="Product" asp-action="Index" class="nav-link">
                        <i class="fas fa-box-open nav-icon"></i>
                        <p data-controller="Product">Products</p>
                    </a>
                </li>
                <li class="nav-item d-none">
                    <a asp-controller="Product" asp-action="Create" class="nav-link">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Create Product</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Group" asp-action="Index" class="nav-link">
                        <i class="fas fa-clipboard nav-icon"></i>
                        <p data-controller="Group">Groups</p>
                    </a>
                </li>
                <li class="nav-item d-none">
                    <a asp-controller="Group" asp-action="Create" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Create Group</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Spec" asp-action="Index" class="nav-link">
                        <i class="fas fa-table nav-icon"></i>
                        <p data-controller="Spec">Specs</p>
                    </a>
                </li>
                <li class="nav-item d-none">
                    <a asp-controller="Spec" asp-action="Create" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Create Spec</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Variation" asp-action="Index" class="nav-link">
                        <i class="far fa-copy nav-icon"></i>
                        <p data-controller="Variation">Variations</p>
                    </a>
                </li>
                <li class="nav-item d-none">
                    <a asp-controller="Variation" asp-action="Create" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Create variation</p>
                    </a>
                </li>
            </ul>
        </li>
        <li class="nav-item d-none">
            <a href="#" class="nav-link">
                <i class="nav-icon fas fa-clipboard-list"></i>
                <p>
                    Log
                    <i class="fas fa-angle-left right"></i>
                </p>
            </a>
            <ul class="nav nav-treeview">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Logs</p>
                    </a>
                </li>

            </ul>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link">
                <i class="nav-icon fas fa-coins"></i>
                <p>
                    Finance
                    <i class="fas fa-angle-left right"></i>
                </p>
            </a>
            <ul class="nav nav-treeview">
                <li class="nav-item">
                    <a asp-controller="VAT" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-percentage"></i>
                        <p data-controller="VAT">VATs</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Bank" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-university"></i>
                        <p data-controller="Bank">Banks</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="BankAccount" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-money-check"></i>
                        <p data-controller="BankAccount">Bank Accounts</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Currency" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-coins"></i>
                        <p data-controller="Currency">Currencies</p>
                    </a>
                </li>
            </ul>
        </li>
        
    </ul>
</nav>
<!-- /.sidebar-menu -->
</div>
<!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Accounting App</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div id="alert-container">
            </div>
            @RenderBody()
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-light">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
<!-- Main Footer -->
</div>


<script src="/static/js/main.min.js"></script>

<!-- PAGE ~-lib/plugins -->
<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
</body>
</html>