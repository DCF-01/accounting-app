@model VATGet

<div class="container-fluid" style="padding-top: 10vh">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create @ViewBag.ControllerName</h3>
                </div>
                <div class="card-body">

                    <form asp-controller="VAT" asp-action="Manage" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="@Model.VATId" name="VATId"/>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name" required>
                        </div>
                        <div class="form-group">
                            <label>Value</label>
                            <input type="number" step=".01" class="form-control" name="Value" value="@Model.Value" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>