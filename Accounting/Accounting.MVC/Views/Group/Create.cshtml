@model GroupPost
@{
    ViewBag.Title = User.Identity.Name;
}

<div class="container-fluid" style="padding-top: 10vh">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create @ViewBag.ControllerName</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Group" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" id="productNameInput" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>